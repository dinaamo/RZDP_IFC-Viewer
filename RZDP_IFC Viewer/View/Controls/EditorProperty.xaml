<UserControl
    x:Class="RZDP_IFC_Viewer.View.Controls.EditorProperty"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="auto"
    MinWidth="700"
    
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="0,0,5,0" />
            <Setter Property="Padding" Value="1" />
        </Style>
        
        <!--<Style TargetType="{x:Type DataGridCell}">
            <Style.Triggers>
                <Trigger Property="DataGridCell.IsSelected" Value="True">
                    <Setter Property="BorderBrush" Value="DarkBlue"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>-->

        <ContextMenu x:Key="TextBoxMenu">
            <MenuItem Header="Удалить"
                            Click="MenuItemDelete_Click">
                        <MenuItem.Icon>
                        <fa:ImageAwesome
                                    Height="12"
                                    Margin="0,0,3,0"
                                    Foreground="DarkRed"
                                    Icon="Remove" />    
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>


    </UserControl.Resources>
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="260" />
            <ColumnDefinition Width="2" />
            <ColumnDefinition Width="*" MinWidth="350" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="5"
            Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Наименование элемента: " />
                <TextBox
                    x:Name="tbName"
                    Focusable="False"
                    LostFocus="tbName_LostFocus"
                    MouseDoubleClick="TextBox_MouseDoubleClick"
                    Text="{Binding Path=IFCObjectName, Mode=TwoWay}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="GUID: " />
                <TextBlock Text="{Binding Path=IFCObjectGUID}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Класс IFC: " />
                <TextBlock Text="{Binding Path=IFCClass}" />
            </StackPanel>
        </StackPanel>

        <!--  Наборы характеристик  -->

        <GroupBox
            Grid.Row="2"
            Grid.Column="0"
            Header="Наборы характеристик">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Margin="3" Orientation="Horizontal">
                    <Button Click="Button_Click" ToolTip="Добавить">
                        <fa:ImageAwesome
                            Width="25"
                            Height="25"
                            Margin="0,0,0,0"
                            Foreground="DarkBlue"
                            Icon="Plus" />
                    </Button>
                </StackPanel>
                <DataGrid
                    x:Name="dgPropertySet"
                    Grid.Row="1"
                    Width="auto"
                    SelectionMode="Single" 
                    AutoGenerateColumns="False"
                    ItemsSource="{Binding Path=CollectionPropertySet}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn
                            Width="*"
                            MinWidth="100"
                            
                            SortMemberPath="{Binding Path=NamePropertySet}"
                            CanUserSort="False"
                            Header="Наименование"
                            Visibility="Visible">

                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox
                                        Text="{Binding Path=NamePropertySet, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Focusable="False"
                                        Foreground="Black"
                                        MouseDoubleClick="TextBox_MouseDoubleClick"
                                        LostFocus="tbName_LostFocus" 
                                        ContextMenu="{StaticResource TextBoxMenu}">
                                    </TextBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <GridSplitter
            Grid.Row="2"
            Grid.Column="1"
            Width="20"
            HorizontalAlignment="Center" />

        <!--  Характеристики  -->

        <GroupBox
            Grid.Row="2"
            Grid.Column="2"
            Header="Характеристики">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Margin="3"
                    Orientation="Horizontal">
                    <Button ToolTip="Добавить">
                        <fa:ImageAwesome
                            Width="25"
                            Height="25"
                            Margin="0,0,0,0"
                            Foreground="DarkBlue"
                            Icon="Plus" />
                    </Button>
                </StackPanel>
                <DataGrid
                    x:Name="dgProperty"
                    Grid.Row="1"
                    Width="auto"
                    
                    SelectionMode="Single" 
                    SelectionUnit="Cell"
                    AutoGenerateColumns="False"
                    ItemsSource="{Binding ElementName=dgPropertySet, Path=SelectedItem.PropertyCollection, UpdateSourceTrigger=PropertyChanged}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn
                            Width="*"
                            MinWidth="100"
                            IsReadOnly="False"
                            CanUserSort="False"
                            SortMemberPath="{Binding Path=NameProperty}"
                            Header="Наименование">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox
                                            Text="{Binding Path=NameProperty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Focusable="False"
                                            Foreground="Black"
                                            MouseDoubleClick="TextBox_MouseDoubleClick"
                                            LostFocus="tbName_LostFocus" 
                                            ContextMenu="{StaticResource TextBoxMenu}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
                            Width="*"
                            MinWidth="100"
                            IsReadOnly="False"
                            CanUserSort="False"
                            SortMemberPath="{Binding Path=ValueString}"
                            Header="Значение">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox
                                            Text="{Binding Path=ValueString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Focusable="False"
                                            Foreground="Black"
                                            MouseDoubleClick="TextBox_MouseDoubleClick"
                                            LostFocus="tbName_LostFocus" 
                                            ContextMenu="{StaticResource TextBoxMenu}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn
                            Width="*"
                            MinWidth="100"
                            IsReadOnly="True"
                            CanUserSort="False"
                            SortMemberPath="{Binding Path=DataType}"
                            Header="Тип данных">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox
                                            Text="{Binding Path=DataType, Mode=OneTime}"
                                            Focusable="False"
                                            Foreground="Black"
                                            MouseDoubleClick="TextBox_MouseDoubleClick"
                                            LostFocus="tbName_LostFocus" 
                                            ContextMenu="{StaticResource TextBoxMenu}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>