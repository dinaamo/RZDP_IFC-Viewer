<Window x:Class="RZDP_IFC_Viewer.View.Windows.GroupOperation_Windows.GroupEditPropertySetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:vm="clr-namespace:RZDP_IFC_Viewer.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RZDP_IFC_Viewer.View.Windows.GroupOperation_Windows"
        mc:Ignorable="d"
        Title="Групповые операции с наборами характеристик" Height="450" Width="800" Closed="Window_Closed">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <vm:GroupEditPropertySetViewModel/>
    </Window.DataContext>
    <Grid Margin="5">
        <DockPanel>
        <GroupBox Header="Критерии поиска" DockPanel.Dock="Top" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="0.55*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="8">
                        <TextBlock Text="Найти:"/>
                        <TextBox x:Name="tbFindValue"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="8">
                        <TextBlock Text="Заменить на:"/>
                        <TextBox x:Name="tbSetValue"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Vertical" Margin="8" VerticalAlignment="Center">
                        <TextBlock Margin="0,15,0,0"
                            Text="{Binding ElementName=dgPropertySets, Path=Items.Count, StringFormat=Элементов: \{0\}}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Orientation="Vertical">
                        <RadioButton x:Name="rbSetFragment" Content="Заменить фрагмент" IsChecked="True"/>
                        <RadioButton x:Name="rbSetWhole" Content="Заменить целиком"/>
                        <RadioButton x:Name="rbSetPrefix" Content="Добавить перфикс"/>
                    </StackPanel>
                </Grid>
            </GroupBox >
            
            <StackPanel DockPanel.Dock="Left" Orientation="Vertical">
                <GroupBox Header="Поиск">
                    <StackPanel>
                        <Button Click="Button_Click_Search">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome
                                    Width="10"
                                    Height="10"
                                    Margin="2"
                                    Foreground="DarkGreen"
                                    Icon="Search"/>
                                <TextBlock Text="Найти" Margin="2"/>
                            </StackPanel>
                        </Button>
                        <Button Click="Button_Click_Clear">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome
                                        Width="10"
                                        Height="10"
                                        Margin="2"
                                        Foreground="DarkMagenta"
                                        Icon="Refresh"/>
                                <TextBlock Text="Очистить" Margin="2"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Заменить">
                    <StackPanel>
                        <Button Command="{Binding ReplaceNamePropertySetCommand}" >
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome
                                        Width="10"
                                        Height="10"
                                        Margin="2"
                                        Foreground="CadetBlue"
                                        Icon="Reply"/>
                                <TextBlock Text="Заменить" Margin="2"/>
                            </StackPanel>

                            <Button.CommandParameter>
                                <MultiBinding Converter="{StaticResource ConvertParametersMultibuilding}">
                                    <Binding ElementName="tbSetValue"  Path="Text"/>
                                    <Binding ElementName="tbFindValue"  Path="Text"/>
                                    <Binding ElementName="rbSetFragment"  Path="IsChecked"/>
                                    <Binding ElementName="rbSetWhole"  Path="IsChecked"/>
                                    <Binding ElementName="rbSetPrefix"  Path="IsChecked"/>
                                    <Binding ElementName="dgPropertySets"  Path="SelectedItems"/>
                                </MultiBinding>
                            </Button.CommandParameter>
                        </Button>
                        <Button Command="{Binding ReplaceNamePropertySetCommand}" >
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome
                                        Width="10"
                                        Height="10"
                                        Margin="2"
                                        Foreground="DarkBlue"
                                        Icon="ReplyAll"/>
                                <TextBlock Text="Заменить все" Margin="2"/>
                            </StackPanel>
                            <Button.CommandParameter>
                                <MultiBinding Converter="{StaticResource ConvertParametersMultibuilding}">
                                    <Binding ElementName="tbSetValue"  Path="Text"/>
                                    <Binding ElementName="tbFindValue"  Path="Text"/> 
                                    <Binding ElementName="rbSetFragment"  Path="IsChecked"/>
                                    <Binding ElementName="rbSetWhole"  Path="IsChecked"/>
                                    <Binding ElementName="rbSetPrefix"  Path="IsChecked"/>
                                    <Binding ElementName="dgPropertySets"  Path="ItemsSource"/>
                                </MultiBinding>
                            </Button.CommandParameter>
                        </Button>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Удалить">
                    <StackPanel>
                        <Button Command="{Binding DeleteElementCommand}" CommandParameter="{Binding ElementName=dgPropertySets, Path=SelectedItems}">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome
                                        Width="10"
                                        Height="10"
                                        Margin="2"
                                        Foreground="Red"
                                        Icon="Remove"/>
                                <TextBlock Text="Удалить" Margin="2"/>
                            </StackPanel>
                            
                        </Button>
                        <Button Command="{Binding DeleteElementCommand}"  CommandParameter="{Binding ElementName=dgPropertySets, Path=ItemsSource}">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome
                                        Width="10"
                                        Height="10"
                                        Margin="2"
                                        Foreground="DarkRed"
                                        Icon="Remove"/>
                                <TextBlock Text="Удалить все" Margin="2"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </GroupBox>

            </StackPanel>

            <GroupBox Header="Наборы характеристик" DockPanel.Dock="Bottom" Margin="5" Padding="2">
            <DataGrid
                x:Name="dgPropertySets"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                Style="{StaticResource NoStyleDataGrid}"
                ItemsSource="{Binding Path=FilteredSearchItems, UpdateSourceTrigger=PropertyChanged}">
                <DataGrid.Columns>
                        <DataGridTextColumn
                                Width="*"
                                MinWidth="100"
                                CanUserSort="True"
                                Header="Наименование элемента"
                                Binding="{Binding Path=ModelObject.IFCObjectName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn
                                Width="*"
                                MinWidth="100"
                                CanUserSort="True"
                                Binding="{Binding Path=NamePropertySet, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                Header="Наименование набора"/>
                        <DataGridTextColumn
                                Width="70"
                                MinWidth="70"
                                CanUserSort="True"
                                Binding="{Binding Path=CountRelatedObjectsInstanse, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                Header="Экземпляр"
                                Visibility="Visible"/>
                        <DataGridTextColumn
                                Width="40"
                                MinWidth="40"
                                Binding="{Binding Path=CountRelatedObjectsType, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                CanUserSort="True"
                                Header="Тип"
                                Visibility="Visible"/>
                    </DataGrid.Columns>
                    <DataGrid.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </DataGrid.ItemsPanel>
                </DataGrid>
        </GroupBox>
        </DockPanel>
    </Grid>
</Window>
