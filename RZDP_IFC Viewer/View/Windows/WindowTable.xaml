<Window
    x:Class="IFC_Table_View.View.Windows.WindowTable"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:IFC_Table_View.ViewModels"
    Name="Win"
    Title="{Binding Path=TableName}"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>

    <Grid>
        <DockPanel>
            <DockPanel
                Margin="10,5,0,0"
                DockPanel.Dock="Top">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Margin="0,0,10,0"
                               VerticalAlignment="Center"
                               Text="Размер текста:" />
                    <Button
                        Width="20"
                        Height="20"
                        Click="Button_Less_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10" />
                            </Style>
                        </Button.Resources>
                        <fa:ImageAwesome
                            Width="15"
                            Height="15"
                            Margin="0,1,1,0"
                            Foreground="Black"
                            Icon="ArrowLeft" />
                    </Button>
                    <TextBox
                        Margin="8,0,8,0"
                        VerticalAlignment ="Center"
                        HorizontalAlignment="Right"
                        BorderThickness="0"
                        Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=FontSizeTable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Button
                        Width="20"
                        Height="20"
                        Click="Button_More_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10" />
                            </Style>
                        </Button.Resources>
                        <fa:ImageAwesome
                            Width="15"
                            Height="15"
                            Margin="0,1,1,0"
                            Foreground="Black"
                            Icon="ArrowRight" />
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <TextBlock
                            Margin="60,0,0,0"
                            Text="Экспорт в Excel:" />
                    <Button
                        Width="30"
                        Height="30"
                        Margin="8,0,0,0"
                        Click="Button_Export_Excel_Click">
                        <fa:ImageAwesome
                            Width="25"
                            Height="25"
                            Margin="0,0,0,0"
                            Foreground="DarkGreen"
                            Icon="FileExcelOutline" />
                    </Button>
                </StackPanel>
            </DockPanel>

            <GroupBox
                x:Name="grBox"
                Margin="5"
                DockPanel.Dock="Top"
                Header="Таблица">
                <DataGrid
                    Name="dgTable"
                    Margin="0"
                    VerticalAlignment="Stretch"
                    AutoGenerateColumns="True"
                    CanUserSortColumns="False"
                    ColumnWidth="auto"
                    DockPanel.Dock="Top"
                    FontSize="{Binding Path=FontSizeTable, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    HorizontalGridLinesBrush="#FFC8C8C8"
                    IsReadOnly="True"
                    ItemsSource="{Binding Path=dataTable}"
                    SelectionMode="Extended"
                    SelectionUnit="FullRow"
                    VerticalGridLinesBrush="#FFC9C9C9"

                    LoadingRow="dgTable_LoadingRow">

                    <DataGrid.Style>
                        <Style TargetType="DataGrid">
                            <Setter Property="ColumnHeaderStyle">
                                <Setter.Value>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" TextWrapping="Wrap" />
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.Style>
                </DataGrid>
            </GroupBox>
        </DockPanel>
    </Grid>
</Window>